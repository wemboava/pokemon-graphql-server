{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "incremental": false,
    "module": "commonjs",
    "outDir": "./public",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "paths": {
      "@src/*": ["*"],
      "@graphql/*": ["graphql/*"]
    }
  },
  "file": ["src/server.ts"],
  "exclude": ["public/*", "node_modules"]
}
